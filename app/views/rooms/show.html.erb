<h1>部屋詳細</h1>
<p class="subtitle">-- Room Detail --</p>
<div class="container d-inline-flex">
  <div>
    <% if @room.image.attached? %>
      <%= image_tag @room.customize_image(600,500) %>
    <% else %>
      <%= image_tag 'default_room.jpeg',:size => '600x500' %>
    <% end %>
  </div>
  <% if current_user.id != @room.user_id %>
  <div style="margin: 0 auto; margin-top:18px;" >
  <% else %>
  <div style="margin: 0 auto; margin-top:140px;" >
  <% end %>
    <h2><%= @room.name %></h2>
    <p><span>オーナー: </span><%= @user.name %></p>
    <p><span>内容: </span><%= @room.content %></p>
    <p><span>料金: </span><%= @room.price %></p>
    <hr style="color:black;">
  <% if current_user.id != @room.user_id %>
    <%= form_for @reservation , method: :post, url: reservations_confirm_path do |f|%> 
      <p>
          <%= f.label :persons,"人数" %>
          <%= f.number_field :persons %>
        </p>
        <p>
          <%= f.label :start_date,"宿泊開始日" %>
          <%= f.date_field :start_date %>
        </p>
        <p>
          <%= f.label :end_date,"宿泊終了日" %>
          <%= f.date_field :end_date %>
        </p>
        <%= f.hidden_field :room_id,:value => @room.id %>
      <%= f.submit "予約する" %>
    <% end %>
  <% end %>
  </div>
</div>